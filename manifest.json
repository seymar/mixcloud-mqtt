{
  "manifest_version": 2,

  "name": "Mixcloud MQTT",
  "description": "A Chrome Extension that gets info about a currently playing Mixcloud mix and publishes this info to a MQTT broker.",
  "version": "1.0.1",

  "permissions": [
   "activeTab",
   "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.mixcloud.com/*",
        "https://mixcloud.com/*"
      ],
      "js": [
        "d3.min.js",
        "mqtt.js",
        "mixcloud-mqtt.js"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  }
}